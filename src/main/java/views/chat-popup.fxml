<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chat Data" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="closeChatButton" minWidth="100.0" mnemonicParsing="false" onAction="#OnCloseButtonClicked" text="Close" />
            <Button fx:id="deleteChatButton" minWidth="100.0" mnemonicParsing="false" onAction="#OnDeleteButtonClicked" text="Delete" />
            <Button fx:id="pinUnpinButton" minWidth="100.0" mnemonicParsing="false" onAction="#OnPinUnpinButtonClicked" text="Pin/Unpin" />
         </children>
      </HBox>
   </bottom>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sender:" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Reply To:" GridPane.rowIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Message:" GridPane.rowIndex="2" />
            <Text fx:id="senderText" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="1" />
            <Text fx:id="replyToText" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Text fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="125.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="replyTextField" GridPane.rowIndex="3" />
            <Button fx:id="sendReplyButton" mnemonicParsing="false" onAction="#OnSendReplyButtonClicked" text="Send Reply" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </center>
</BorderPane>
